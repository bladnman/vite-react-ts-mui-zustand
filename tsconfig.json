{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "sourceMap": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,

    "baseUrl": ".",
    /**
      * Paths are relative to the baseUrl
      * Remember to update in vite.config file also
      *
      * @assets/* -> ./src/assets/*
      * @common/* -> ./src/common/*
      * @data/* -> ./src/data/*
      * @hooks/* -> ./src/hooks/*
      * @pages/* -> ./src/pages/*
      * @store/* -> ./src/store/*
      * @theme/* -> ./src/theme/*
      * @utils/* -> ./src/utils/*
      */
    "paths": {
      "@assets/*": ["./src/assets/*"],
      "@common/*": ["./src/common/*"],
      "@data/*": ["./src/data/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@pages/*": ["./src/pages/*"],
      "@store/*": ["./src/store/*"],
      "@theme/*": ["./src/theme/*"],
      "@utils/*": ["./src/utils/*"]
    }
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
